# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
FRONTEND_URL=https://your-domain.com
MAX_CONNECTIONS=1000

# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/evalis_production?sslmode=require

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars-long-in-production
JWT_EXPIRE=24h
SESSION_SECRET=your-super-secure-session-secret-min-32-chars-long

# Admin Configuration
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password-in-production

# Firebase Configuration (if using)
FIREBASE_PROJECT_ID=your-production-firebase-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Production-Private-Key\n-----END PRIVATE KEY-----\n"

# Email Configuration
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-email-app-password

# Rate Limiting (adjusted for production load)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads

# Monitoring & Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Redis Configuration (for session management and caching)
REDIS_URL=redis://redis:6379
ENABLE_REDIS_CACHE=true

# SSL Configuration (if terminating SSL at application level)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
