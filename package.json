{
  "name": "evalis",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend\"",
    "frontend": "vite",
    "build": "tsc -b && vite build && npm run build:server",
    "build:server": "cd server && npm install --production",
    "start": "NODE_ENV=production node server/server.js",
    "vercel-build": "npm run build",
    "start:dev": "NODE_ENV=development nodemon server/server.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "server:prod": "NODE_ENV=production node server/server.js",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d",
    "test:db": "node server/testPgConnection.js",
    "setup:neondb": "node server/setupNeonDB.js",
    "migrate:mongodb": "node server/migrateMongoDB.js",
    "create:admin": "node server/createAdmin.js",
    "reset:admin": "node server/createAdmin.js --reset",
    "create:testusers": "node server/createTestUsers.js",
    "seed:batches": "node server/seed.js",
    "docker:build": "docker build -t evalis-gt .",
    "docker:run": "docker run -p 3000:3000 evalis-gt",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "logs": "docker-compose logs -f app",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "pm2:start": "pm2 start ecosystem.config.json --env production",
    "pm2:stop": "pm2 stop evalis-gt",
    "pm2:restart": "pm2 restart evalis-gt",
    "pm2:reload": "pm2 reload evalis-gt",
    "pm2:delete": "pm2 delete evalis-gt",
    "pm2:logs": "pm2 logs evalis-gt",
    "pm2:monit": "pm2 monit",
    "production:install": "npm ci --production && cd server && npm ci --production",
    "production:start": "npm run pm2:start",
    "production:stop": "npm run pm2:stop"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/lab": "^5.0.0-alpha.165",
    "@mui/material": "^5.15.10",
    "@reduxjs/toolkit": "^2.1.0",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.4.3",
    "firebase": "^11.10.0",
    "firebase-admin": "^11.11.1",
    "framer-motion": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "mongoose": "^8.1.1",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "sequelize": "^6.37.7",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^13.24.0",
    "nodemon": "^3.0.3",
    "pm2": "^6.0.8",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "terser": "^5.39.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "description": "Evalis - University Grading and Submission Portal",
  "main": "server/server.js",
  "keywords": [
    "education",
    "university",
    "grading",
    "submissions",
    "mongodb",
    "react",
    "node"
  ],
  "author": "",
  "license": "ISC"
}
