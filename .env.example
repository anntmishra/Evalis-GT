#############################################
# Node Environment
#############################################
NODE_ENV=development

#############################################
# Server Configuration
#############################################
PORT=3000
PORT_CANDIDATES=3000,3001,3002

#############################################
# Frontend URL for CORS
#############################################
FRONTEND_URL=http://localhost:5173,http://localhost:5174

#############################################
# AWS RDS Database Configuration
#############################################
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/database_name

#############################################
# JWT Authentication
#############################################
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h

#############################################
# Admin Configuration
#############################################
DEFAULT_ADMIN_PASSWORD=your_admin_password_here

#############################################
# Firebase Configuration (Web SDK Config for Frontend)
#############################################
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Vite requires duplicated envs prefixed with VITE_
VITE_FIREBASE_API_KEY=${FIREBASE_API_KEY}
VITE_FIREBASE_AUTH_DOMAIN=${FIREBASE_AUTH_DOMAIN}
VITE_FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
VITE_FIREBASE_STORAGE_BUCKET=${FIREBASE_STORAGE_BUCKET}
VITE_FIREBASE_MESSAGING_SENDER_ID=${FIREBASE_MESSAGING_SENDER_ID}
VITE_FIREBASE_APP_ID=${FIREBASE_APP_ID}
VITE_FIREBASE_MEASUREMENT_ID=${FIREBASE_MEASUREMENT_ID}

#############################################
# Firebase Admin (Server-side SDK)
#############################################
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY_B64=your_base64_encoded_private_key_here

#############################################
# Email Configuration (Gmail SMTP)
#############################################
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here
EMAIL_DRY_RUN=false