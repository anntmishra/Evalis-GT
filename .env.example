# Environment Configuration Template
# Copy this file to .env and replace with actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
# Optional: Comma-separated list of candidate ports to try in order (overrides incremental fallback logic)
# Example: PORT_CANDIDATES=3001,3002,4000
PORT_CANDIDATES=
FRONTEND_URL=https://your-domain.com
MAX_CONNECTIONS=1000

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=24h
SESSION_SECRET=your-super-secure-session-secret-key-here

# Admin Configuration  
DEFAULT_ADMIN_PASSWORD=secure-admin-password-here

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Redis Configuration (for production scaling)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
